generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                   String           @id @default(uuid())
  email                String           @unique
  role                 Role             @default(USER)
  prebuiltModelsOrders PrebuiltOrders[]
  customOrders         CustomOrders[]
}

model PrebuiltOrders {
  id          String     @id @default(uuid())
  serviceName String
  date        DateTime   @default(now())
  orderState  OrderState @default(PENDING)
  userId      String
  user        User       @relation(fields: [userId], references: [id])
}

model CustomOrders {
  id          String     @id @default(uuid())
  serviceName String[]
  date        DateTime   @default(now())
  description String
  orderState  OrderState @default(PENDING)
  userId      String
  user        User       @relation(fields: [userId], references: [id])
}

enum OrderState {
  PENDING
  DELIVERED
  CANCELLED
}

enum Role {
  ADMIN
  USER
}
